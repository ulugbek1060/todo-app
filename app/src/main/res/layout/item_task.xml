<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp">

  <CheckBox
    android:id="@+id/checkbox_task"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="0dp"
    android:minHeight="0dp" />

  <TextView
    android:id="@+id/text_view_task"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/checkbox_task"
    android:layout_alignBottom="@id/checkbox_task"
    android:layout_toStartOf="@id/label_priority"
    android:layout_toEndOf="@id/checkbox_task"
    android:ellipsize="end"
    android:gravity="center_vertical"
    android:maxLines="1"
    android:textColor="@color/text_color"
    tools:text="item example" />

  <ImageView
    android:id="@+id/label_priority"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:src="@drawable/ic_priority" />

</RelativeLayout>